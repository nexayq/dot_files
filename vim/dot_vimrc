
" <<<Basic vim setup - Linux and Win
    " " Colors
        " colorscheme desert

    " " Various
        " syntax on
        " set clipboard=unnamedplus

    " " Set leader key
        " let mapleader=" "

    " " Tab
        " filetype plugin indent on
        " set expandtab       " Expand TABs to spaces
        " set tabstop=4       " The width of a TAB is set to 4.
        " set softtabstop=4
        " set shiftwidth=4
        " set smarttab

    " " Swap
        " set noswapfile
        " set nobackup

    " " Whitespace characters
        " set list
        " set listchars=tab:>-,trail:~,extends:>,precedes:<

    " " Map :W to :w
        " command W w
        " command Q q
        " command Qa qa

    " " Clean trailing characters
        " nnoremap <leader>k :call NK_CleanTrailingChars()<CR>

        " function! NK_CleanTrailingChars()
            " let ln_number = line(".")
            " execute '%s/\s\+$//'
            " execute 'normal '.ln_number.'G'
        " endfunc

    " " Clean search
        " nnoremap <leader>/c :nohlsearch<CR>

    " " Incremental search
        " set incsearch

    " " Save clipboard on exit
            " autocmd VimLeave * call system("xclip -selection clipboard", getreg('+'))

    " " Show line numbers
        " set number
        " set relativenumber

    " " Remap ; to :
        " nnoremap ; :

" Basic vim setup - Linux and Win>>>

